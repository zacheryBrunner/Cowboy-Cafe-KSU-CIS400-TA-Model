    Class: RustlersRibsCustomization.xaml
    Purpose: xaml for the customization page of rustler's ribs -->
<UserControl x:Class="PointOfSale.CustomizationScreens.RustlersRibsCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.CustomizationScreens"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="600">
    
    <!--Beginning of the grid-->
    <Grid>
        <!--2 rows-->
        <Grid.RowDefinitions>
            <RowDefinition/> <!--Rustler's Ribs Customization Label-->
            <RowDefinition/> <!--Nothing to Customize Label-->
        </Grid.RowDefinitions>

        <!--Rustler's Ribs Customization Label-->
        <Label x:Name="RustlersRibsCustomizationLabel"
               Content="Rustler's Ribs"/>

        <!--Nothing to Customize Label-->
        <Label x:Name="NothingToCustomizeLabel"
               Grid.Row="1"
               Content="NOTHING TO CUSTOMIZE"/>
    </Grid>
</UserControl>